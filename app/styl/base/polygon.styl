.obj
  width: 220px;
  height: 220px;
  position relative
  border 0.5px solid #000


.tile
  background linear-gradient(0deg, #388fcb 10%, #649ee9 50%, #febff9)
  position absolute
  top 0
  left 0
  width 230px
  height 230px
  -webkit-transform-origin top center
  -webkit-clip-path:polygon(0px 189px, 109px 0px, 197px 154px, 157px 154px, 108px 69px, 19px 222px)

  &:nth-child(2)
    background linear-gradient(to top, #febff9 10%, #fecd78, #6abc42)
    -webkit-transform-origin: 128px 137px;
    -webkit-transform rotate(120deg)

  &:nth-child(3)
    background linear-gradient(40deg, #6abc42 10%, #2b77b1 60%)
    -webkit-transform rotate(-120deg)
    -webkit-transform-origin: 128px 137px;


.loader
  background: blue;
  width: 20px;
  height: 20px;
  display: block;
  border-radius 50%
  position: absolute;

  &:before
    position: absolute;
    display: block;
    width: 20px;
    height: 20px;
    background: red;
    right: 0;


