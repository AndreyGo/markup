/* Modals styles */

.page_recall
  display none

.page_modal
  border-radius 4px
  background #fbfbfa

.modal_header
  background #f4f4f4
  padding 15px 0
  position relative
  text-align center
  border-radius 4px 4px 0 0

  h2
    font 400 21px robotoBold
    color #000
    text-transform uppercase

.modal_close
  position absolute
  top 30px
  right 90px
  width 31px
  height 31px
  background #fff
  border-radius 4px
  cursor pointer

  .icon-modal-close
    display block
    position absolute
    sprite($modal-close)
    top 0
    bottom 0
    left 0
    right 0
    margin auto

.modal_body
  padding 30px 0

  input
    display block
    width 100%
    height 47px
    box-shadow inset 0 1px 6px rgba(#000, 0.2)
    border none
    border-radius 2px
    padding 0 20px

    &:nth-child(1)
      margin-bottom 30px

.modal_body_i,
.modal_footer_i
  width 100%
  max-width 480px
  margin 0 auto

.modal_footer
  background blue
  padding 30px 0
  border-radius 0 0 4px 4px

.modal_footer_btn
  height 50px
  line-height 50px
  font 700 16px arial
  color blue
  width 100%