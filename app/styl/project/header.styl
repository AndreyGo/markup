.page_header
    background #fff
    box-shadow 0 5px 20px rgba(#000, 0.2)
    cf()
    padding 22px 0
    color #555

.header_row
    cf()

    &:first-child
        margin 0 0 30px 0

.header-left
    padding 0 20px
    col(3)

.header-right
    col(9, r)

.header_logo
    a
        display block
        text-align center

        img
            max-width 100%

.header_company
    .icon-dots
        sprite($dots)
        display inline-block
        vertical-align middle
        margin 0 0 0 10px

    ul
        li
            position relative
        li.address
            a
                border-bottom 1px dotted blue

                &:hover
                    border-bottom 1px dotted orange

        li:hover
            .text-bold
                color #555

            .icon-dots
                sprite($dots-black)


.header_company_dropdown
    left -20px
    .dropdown_menu
        padding 10px 0
        li
            a
                font-weight 400
                height 45px
                line-height 45px

                &:hover
                    color blue

.address_dropdown
    top -9px
    left -20px

    ul.dropdown_menu
        padding 10px 0
        li
            display block
            padding 0 20px
            height 35px
            line-height 35px
            a
                border none
                padding 0
                background none

                &:hover
                    border none

.header_info
    max-width 132px
    margin-right gutterWidth(2, 9)

.header_callback
    float left
    max-width 152px

.header_info, .header_callback
    font 400 12px/16px arial
    float left
    width 100%

    .title
        font 400 15px kelson
        display block
        margin 0 0 15px 0
        color #000
        text-transform uppercase

        a
            border-bottom 1px dotted blue

            &:hover
                border-bottom 1px dotted orange

        .bold
            font-family kelsonBold

.header_login
    col(3 9, r)
    padding 0 30px

    .enter-text
        display block
        font 400 14px arial
        margin 0 0 10px 0

    a
        font-size 12px
        border-bottom 1px dotted blue
        display inline-block
        line-height 1
        vertical-align middle
        margin 0 5px 0 0

        &:hover
            border-bottom 1px dotted orange

    .icon-user-arrow-down
        sprite($user-arrow-down)
        display inline-block
        vertical-align middle

    .icon-user
        sprite($header-user)
        display inline-block
        vertical-align text-bottom
        margin 0 10px 0 0



/* Header navigation */

.header_nav
    background-color blue
    background-image linear-gradient(to top, #164688, #1e6dbd)
    box-shadow inset 0 1px 2px rgba(#fff, 0.6), 0 3px 8px rgba(#000, 0.3)
    padding 17px 30px
    height 50px
    width 100%
    max-width 500px
    line-height 1
    border-radius 4px
    float left

    .icon-header-arrow
        display inline-block
        vertical-align middle
        sprite($nav-arrow-down)
        margin 0 0 0 5px

.header_nav_item
    display block
    float left
    width 18%
    margin 0 2% 0 0
    position relative

    &:hover .icon-header-arrow
        sprite($nav-arrow-up)

    > a
        color #fff
        font 400 14px kelsonBold
        text-transform uppercase
        padding 20px 0

        &:hover
            color #fff



/* Header dropdown*/

.header_dropdown
    top 200%
    left -35%
    padding-bottom 20px

    a:hover
        color blue

    .dropdown_menu
        li
            height 35px
            line-height 35px

    .dropdown_title
        background #f4f4f4
        font-weight 700
        height 56px
        padding 0 20px
        line-height 56px

        &:nth-child(1)
            border-radius 4px 4px 0 0

        > span
            display inline-block
            vertical-align middle
            line-height 1
            width 100px

    .level_2
        top -10px
        padding 15px 0
        left 100%
        width 170px


/* Header busket*/

.header_busket
    background-color blue
    background-image linear-gradient(to top, #164688, #1e6dbd)
    box-shadow inset 0 1px 2px rgba(#fff, 0.6), 0 3px 8px rgba(#000, 0.3)
    padding 0 10px
    width 100%
    height 50px
    max-width 185px
    line-height 50px
    border-radius 4px
    float right
    text-align center

    &:hover .icon-basket-arrow
        display block
        position absolute
        top 9px
        left 11px
        margin auto
        sprite($basket-arrow)

    &:hover .header_busket_value
        display none

    a
        color #fff
        font 700 14px arial
        text-shadow 0 1px 1px rgba(#000, 0.6)
        display inline-block
        vertical-align middle

        &:hover
            color #fff

    .icon-header-basket
        sprite($basket)
        display inline-block
        vertical-align middle
        margin 0 10px 0 0

.header_busket_circle
    width 30px
    height 30px
    border-radius 50%
    display inline-block
    background orange
    text-align center
    line-height 28px
    vertical-align middle
    margin 0 0 0 15px
    box-shadow inset 0 1px 2px rgba(#000, 0.5), 0 1px 1px rgba(#000, 0.5)
    position relative

/* Busket Dropdown */

.header_busket_dropdown-i
    cf()
    padding-top 20px
    position relative

.header_busket_dropdown
    right -10px
    top 40%
    background none
    width 260px

.header_busket_dropdown_title
    background #f4f6fa
    padding 20px
    text-align left
    border-bottom 1px solid #e5e5e5
    border-radius 4px 4px 0 0

.header_busket_items_num,
.header_busket_items_sum
    display block

.header_busket_item
    border-bottom 1px solid #e5e5e5
    height 100px
    position relative
    padding 20px
    background #fff

    .busket_item_close
        width 21px
        height 21px
        background #f4f4f4
        border-radius 2px
        position absolute
        right 20px
        top 20px
        cursor pointer

    .icon-busket-close
        sprite($busket-close)
        display block
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        margin auto

    .busket_item_img
        width 100%
        max-width 50px
        float left
        margin-right 10px

        a
            display block
            text-align center

        img
            max-width 100%

    .busket_item_info
        width 100%
        max-width 140px
        float left
        text-align left

        .title
            display block
            margin-bottom 15px
            a
                font 400 12px arial
                color blue
                text-shadow none

        .price
            font 400 12px arial
            color #000
