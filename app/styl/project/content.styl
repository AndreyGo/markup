.page_content
    col(9, r)

/* Page search
=================*/

.page_search-i
  col(9, r)
  cf()

.page_search
  cf()
  margin-bottom 32px

.search_form

  input
    width relW(560, 9)
    margin-right relW(10, 9)
    height 50px
    padding 0 20px
    color #bbb
    border-radius 2px
    box-shadow inset 0 1px 4px rgba(#000, 0.2)
    display block
    float left
    box-sizing border-box

  button
    float right
    height 50px
    display block
    padding 0
    width relW(125, 9)
    color blue
    font 700 15px arial


/* Page Slider
===================*/

.page_slider_wrapper
  position relative
  cf()

.page_slider
  position relative
  border-radius 4px
  max-height 380px
  li
      max-height 380px
      overflow hidden
      border-radius 4px
      position relative

      .slider_btn_more
        display block
        position absolute
        left 0
        background rgba(#36221a, 0.7)
        width 240px
        height 40px
        border-radius 2px
        text-align center
        line-height 40px
        color #fff
        bottom 90px
        left 75px
        transition background .2s ease-in-out

        &:hover
          background rgba(#36221A, 0.9)

      a
          display block

  img
      max-width 100%
      display block

  &:before
    content ""
    display block
    position absolute
    top 0
    left 0
    width 100%
    margin 0 auto
    height 100%
    box-shadow 0 5px 20px rgba(#000, 0.6)
    -webkit-transform scaleX(0.95)
    -moz-transform scaleX(0.95)
    -ms-transform scaleX(0.95)
    -o-transform scaleX(0.95)
    transform scaleX(0.95)

  a.bx-next
    sprite($slider-arrow-right)

  a.bx-prev
    sprite($slider-arrow-left)

.slider_discount
  position absolute
  top 0
  right 0

.page_slider_pagination
  position absolute
  bottom 90px
  left 75px

.slider_pagination_text
  display inline-block
  vertical-align middle
  margin-right 20px
  font-size 14px
  text-shadow 0 1px 0 #000
  color #fff

.slider_pagination_curent
  font-weight 700
  font-size 21px

.slider_pagination_units
  display inline-block
  vertical-align middle
  li
    display block
    float left
    margin-right 10px

    a
      width 20px
      height 20px
      display block
      border 3px solid rgba(#000, 0.6)
      background-clip padding-box
      border-radius 50%
      background rgba(#888, 0.6)

    a.active
      border-color #fff
/* Special Grid
==========================*/

.page_section_title
  margin 0 0 30px 0

.page_special
  margin 0 0 40px 0

.page_special_grid
  margin-bottom 20px
  cf()

.product_item
  col(3 9)
  background #fff
  border-radius 4px
  border 1px solid #d9e1ea
  padding 17px 20px
  margin-bottom 30px
  min-height 245px
  cursor pointer
  position relative
  transition box-shadow .1s ease-in-out

  &:hover
    box-shadow 0 5px 10px rgba(#253d55, 0.5)

  &:nth-child(3n)
    margin-right 0
    float right

  .item_title
    font-size 16px
    margin 0 0 12px 0
    line-height 20px


  .item_image
    max-width 180px
    max-height 130px
    margin 0 0 18px 0

    a
      display block

      img
        max-width 100%
        display block

  .item_price
    font-size 14px
    color #555

    > .bold
      font-weight 700
      color #000
      font-size 18px

  .item_badge
    position absolute
    top 0
    right -1px

    .item_badge_box
      width 30px
      height 30px
      border-radius 2px
      z-index 2
      position relative

    .badge_name
      position absolute
      display block
      opacity 1
      z-index 1
      background rgba(#000, 0.5)
      border-radius 2px
      height 100%
      right 0
      color #fff
      font-size 12px
      text-shadow 0 0 1px #000
      padding 10px
      line-height 1
      white-space nowrap

    .icon
      display block
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2
      margin auto

  .badge_discount
    .item_badge_box
      background green

    .icon
        sprite($percent)


  .badge_like
    .item_badge_box
      background #12639c

    .icon
        sprite($like)

  .badge_exclamation
    .item_badge_box
      background #eec315

    .icon
        sprite($exclamation)


/* Page About Block
==============================*/

.page_about_btn
  height 50px
  line-height 50px
  float right
  width relW(125, 9)

  span
    display inline-block
    vertical-align middle
    line-height 18px
    border-bottom 1px dotted blue

.page_about_text
  margin 0 0 20px 0
.page_about_bottom
  cf()

/* Page breadcrumbs
==============================*/

.page_breadcrumbs
  cf()
  clear both
  margin 0 0 35px 0

  ul
    font-size 0

  li
    display inline-block
    font-size 14px

    &:after
      content "—"
      position relative
      margin 0 4px
      color #bbb

    &:last-child
      color #bbb

      &:after
        content ""

    a
      display inline-block

/* Page filter
==============================*/

.page_filter
  cf()
  border-radius 4px
  background #fff
  border 1px solid #d9e1ea
  margin 0 0 30px 0
  padding 20px

  h1.h1
    margin 0 0 10px 0

.page_filter_block
  display inline-block
  margin 0 0 0 30px

  &:first-child
    margin 0

.page_filter_type
  width 110px

.page_filter_price
  width 160px

.page_filter_quan
  width 62px

/* Page pagination
==============================*/

.page_pagination
  @extend .page_filter
  margin-bottom 50px

.page_pagination_list
  display inline-block

  li
    display inline-block

    &:first-child
      margin-left 15px

    &:last-child
      margin-right 15px

.page_pagination_item
  display block
  border-radius 50%
  width 28px
  height 28px
  color blue
  background #fff
  text-align center
  border 1px solid blue

  &:hover
    border-color orange

  &.active
    background blue
    color #fff

.page_pagination_pagecount
  @extend .page_pagination_item
  display inline-block
  margin 0 15px


