.icon-postman
  sprite($postman)

.icon-delivery
  sprite($delivery)

.icon-truck
  sprite($truck)

.icon-post-phone
  sprite($post-phone)

.article_assist
  border-top 1px solid #ddd
  border-bottom 1px solid #ddd
  color #555
  font-size 13px
  padding 40px 0
  cf()


