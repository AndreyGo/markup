/* Page product
==================*/

.page_product_block
  cf()
  margin-bottom 70px

.page_product_header
  cf()
  margin-bottom 30px
  h1.h1
    font-size 24px
    col(9)

.page_product_price
  col(3, r)
  font-size 18px
  color #555

  .price-bold
    color #33251b
    font 700 24px arial
    margin 0 5px

.icon-product-price-arrow-down
  sprite($product-price-arrow-down)
  display inline-block
  vertical-align middle

.page_product_price-i
  border-bottom 1px dotted #555


.product_view_block
  col(5)

.product_image
  border-radius 4px
  background #fff
  overflow hidden
  border 1px solid #d9e1ea
  margin-bottom 20px

  img
    max-width 100%

.product_slider
  position relative
  cf()

.product_slider_item
  display block
  float left
  width 90px
  height 60px
  border-radius 4px
  background #fff
  border 1px solid #d9e1ea
  margin-right 5px

  a
    display block

    img
      max-width 100%

.product_slider_pagination
  .bx-next,
  .bx-prev
    display block
    position absolute
    top 15px
    transition opacity .2s ease-in-out

    &.disabled
      display none

    &:hover
      opacity 0.5
  .bx-next
    sprite($product-slider-arrow-right)
    right -10px
  .bx-prev
    sprite($product-slider-arrow-left)
    left -10px




.product_summary_block
  col(4)

.product_summary_title
  color #bbb
  font-weight 700
  line-height 1
  margin-bottom 30px
  display block

.product_summary_table
  display table
  line-height 20px
  margin-bottom 50px

  .table_item
    display table-row

    .item_var,
    .item_value
      display table-cell

    .item_var
      color #555

    .item_value
      padding-left 10px

.product_summary_info
  p
    margin 0
    color #333

.summary_info_more
  linkBorder()

.product_sidebar_block
  col(3, r)
  border-radius 4px
  background #fff
  border 1px solid #c4cdd7
  box-shadow 0 5px 20px rgba(#000, 0.3)
  color #555

.product_sidebar_buy
  height 45px
  background linear-gradient(to top, #1b5c00, #1b7f00)
  border none
  border-radius 4px
  width 100%
  color #fff
  text-shadow 0 1px 1px rgba(#000, 0.7)
  box-shadow inset 0 1px 0 rgba(#fff, 0.5)
  display inline-block
  margin-bottom 20px

  &:hover
    background linear-gradient(to bottom, #1b5c00, #1b7f00)

  .icon-basket
    sprite($basket)
    display inline-block
    vertical-align middle
    margin-right 10px

.product_sidebar_favorite
  display block

  .icon-product-flag
    sprite($product-flag)
    display inline-block
    vertical-align middle
    margin-right 10px

  .link
    linkBorder()
    display inline-block
    vertical-align middle
    line-height 1

.product_sidebar_top
  padding 20px
  border-bottom 1px dotted #c4cdd7

.product_sidebar_middle
  border-bottom 1px dotted #c4cdd7

.icon-product-warranty
  sprite($product-warranty)
  display inline-block
  vertical-align middle
  margin-right 10px

.icon-product-instock
  sprite($product-instock)
  display inline-block
  vertical-align middle
  margin-right 10px

.product_sidebar_middle,
.product_sidebar_social
  padding 15px 20px
  background #fafafa

.page_size-table
  margin-bottom 50px

.size-table_header
  margin-bottom 30px

.page_similar-products
  padding 40px 0
  background #fff

  h1.h1
    display block
    margin-bottom 30px

.similar_slider_item
  background #fff
  border-radius 4px
  border 1px solid #d9e1ea
  padding 20px
  min-height 245px

  a
    display block

  &_title
    font-size 16px
    margin-bottom 10px

  &_image
    margin-bottom 30px
    width 170px
    height 130px
    overflow hidden

    img
      max-width 100%
      display block
      margin 0 auto

  &_price
    color #000

    > .text-bold
      font-size 18px

.similar_slider_pagination
  position relative
  .bx-next,
  .bx-prev
    display block
    position absolute
    top -155px
    transition opacity .2s ease-in-out

    &.disabled
      display none

    &:hover
      opacity 0.5
  .bx-next
    sprite($similar-slider-arrow-right)
    right -15px
  .bx-prev
    sprite($similar-slider-arrow-left)
    left -15px

.page_product-about
  padding 40px 0
  cf()

  &-left
    col(3)

  &-right
    col(9, r)
    color #333

  h1.h1
    margin-bottom 40px
    display block

.product-about

  &_title
    color #bbb
    margin-bottom 15px

